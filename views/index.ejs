<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <title>Task And Notes Manager </title>
  </head>
<body>
    <div class="container">
    <h2 class="mb-4" style="text-align: center">
        Task And Notes Manager 
    </h2>
    

    
        <a href="todo/new "class="btn btn-success mb-3 ">Add New Task</a>
        <div class="d-flex justify-content-between flex-wrap ">
            <% todos.forEach(todo => { %>
            <div class="card text-white bg-secondary mb-3"> 
                <div class="card-header bg-transparent border-primary"><%= todo.Title%></div>
                <div class="card-body">
                  <h5 class="card-date"><%= todo.DueDate.toLocaleDateString() %></h5>
                  <p class="card-text"><%= todo.Description.substring(0,25) %></p>
                  <a href="/<%=todo.id%>" class="btn btn-primary">Read More</a>
                </div>
                <div class="card-footer bg-transparent border-primary">Status: <%= todo.Status%></div>
              </div>

        <%}); %>
      </div>
       
    </div>
</div>
</div>

</body>
</html>



                    